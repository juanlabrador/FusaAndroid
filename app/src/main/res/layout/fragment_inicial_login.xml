<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:padding="20dp"
    android:id="@+id/fragment_login">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_contenido_edittex_correo_login"
        android:layout_margin="5dp"
        android:background="@drawable/style_edit_text_azul"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_contenido_edittex_clave_login"
        android:layout_margin="5dp"
        android:background="@drawable/style_edit_text_azul"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_boton_iniciar_sesion_login"
        android:textColor="@color/blanco"
        android:textSize="22sp"
        android:background="@drawable/style_button_background_white"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvOlvidarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_olvidar_clave"
        android:textSize="14sp"
        android:textColor="@color/negro"
        android:gravity="center"/>

</LinearLayout>