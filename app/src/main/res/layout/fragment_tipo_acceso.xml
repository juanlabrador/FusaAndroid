<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_tipo_acceso"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="50dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scaleType="fitCenter"
        android:src="@drawable/logotipo_nombre"/>

    <Button
        android:id="@+id/btnPostularse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/style_button_background_white"
        android:textColor="@color/blanco"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="@string/texto_postularse"
        android:fontFamily="origin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_pregunta_cuenta"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/negro"
            android:layout_margin="3dp"
            android:fontFamily="origin"/>

        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="@string/texto_iniciar_sesion"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/azul_oscuro"
            android:onClick="IniciarSesion"
            android:fontFamily="origin"/>

    </LinearLayout>

</LinearLayout>