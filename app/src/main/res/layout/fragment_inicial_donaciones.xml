<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blanco"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/view_barra_superior_donaciones"
        android:background="@color/azul"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:paddingLeft="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_weight="1.0" />
        <TextView
            android:textSize="16.0dip"
            android:textColor="@color/blanco"
            android:gravity="center_vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/donaciones_titulo_superior"
            android:layout_weight="2.0" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_cedula_donaciones"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/donaciones_edit_text_cedula"
                android:inputType="text" />/>

            <TextView
                android:textColor="@color/gris_oscuro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:textSize="12sp"
                android:text="@string/ejemplo_type_ced" />

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_nombre_donaciones"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/donaciones_edit_text_nombre"
                android:inputType="text" />

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_email_donaciones"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/donaciones_edit_text_correo"
                android:inputType="textEmailAddress" />

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_telefono_donaciones"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/donaciones_edit_text_telefono"
                android:inputType="number"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/azul_oscuro"
                android:text="@string/donaciones_text_view_tipo_instrumentos"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:textSize="16sp"
                android:gravity="center"/>

            <ListView
                android:id="@+id/list_view_instrumentos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:listSelector="@drawable/style_list_selector"
                android:scrollbarStyle="outsideOverlay"
                android:divider="@null"/>

            <com.dd.CircularProgressButton
                android:textSize="22.0sp"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:id="@+id/btn_enviar_solicitud_donaciones"
                android:background="@drawable/style_button_background_white"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                app:cpb_textComplete="@string/contenido_boton_enviado"
                app:cpb_textIdle="@string/contenido_boton_normal"
                app:cpb_textError="@string/contenido_boton_error"
                app:cpb_colorProgress="@color/blanco"
                app:cpb_colorIndicator="@color/azul"
                app:cpb_colorIndicatorBackground="@color/gris"
                app:cpb_selectorComplete="@color/style_btn_circular_progress_verde"
                app:cpb_selectorError="@color/style_btn_circular_progress_rojo"
                app:cpb_selectorIdle="@color/style_btn_circular_progress_azul" />
        </LinearLayout>
</LinearLayout>