<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="5dip"
    android:paddingRight="5dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/azul"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_foto_perfil_drawer"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        app:border_width="2.0dip"
        app:border_color="@color/blanco" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="5.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/blanco"
            android:id="@+id/etNombreDrawer"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:text="Juan Labrador"
            android:layout_weight="1.0" />

        <TextView
            android:textColor="@color/blanco"
            android:id="@+id/etEmailDrawer"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:text="micorreo@example.com"
            android:singleLine="true"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>