<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/gris_fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <com.juanlabrador.GroupLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mostrar_contraseña"
            app:textSizeLayout="15"
            android:layout_marginTop="16dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_oscuro"
            android:textSize="13sp"
            android:text="@string/contraseña_mostrar_descripcion"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    
        <com.juanlabrador.GroupLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/antigua_contraseña"
            app:textSizeLayout="15"
            android:layout_marginTop="12dp"/>
    
        <com.juanlabrador.GroupLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nueva_contraseña"
            app:textSizeLayout="15"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"/>
    
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
    
            <View
                android:id="@+id/barra_muy_debil"
                android:background="@android:color/darker_gray"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
            <View
                android:id="@+id/barra_debil"
                android:background="@android:color/darker_gray"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
            <View
                android:id="@+id/barra_fuerte"
                android:background="@android:color/darker_gray"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
            <View
                android:id="@+id/barra_muy_fuerte"
                android:background="@android:color/darker_gray"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </LinearLayout>
        
        <TextView
            android:textSize="14sp"
            android:gravity="right"
            android:id="@+id/tv_status_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" 
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_oscuro"
            android:textSize="13sp"
            android:text="@string/contraseña_requisito"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        
    </LinearLayout>
    
    <com.dd.CircularProgressButton
        android:textSize="22sp"
        android:textColor="@color/blanco"
        android:id="@+id/btn_cambiar_password"
        android:background="@drawable/style_button_background_white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cpb_textComplete="@string/contraseña_boton_exito"
        app:cpb_textIdle="@string/contraseña_boton"
        app:cpb_textError="@string/contraseña_boton_error"
        app:cpb_colorProgress="@color/blanco"
        app:cpb_colorIndicator="@color/azul"
        app:cpb_colorIndicatorBackground="@color/gris"
        app:cpb_selectorComplete="@color/style_btn_circular_progress_verde"
        app:cpb_selectorError="@color/style_btn_circular_progress_rojo"
        app:cpb_selectorIdle="@color/style_btn_circular_progress_azul" />
</LinearLayout>