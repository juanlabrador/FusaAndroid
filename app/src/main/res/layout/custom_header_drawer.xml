<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools=" http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <com.github.siyamed.shapeimageview.HexagonImageView
        android:id="@+id/iv_foto_perfil_drawer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/no_avatar"
        app:siBorderWidth="1dp"
        app:siBorderColor="@color/blanco"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:textSize="@dimen/size_text_more_big"
        android:textColor="@color/blanco"
        android:id="@+id/etNombreDrawer"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:text="Juan Labrador"
        android:layout_below="@+id/iv_foto_perfil_drawer"
        android:layout_margin="8dp"
        fontPath="fonts/HelveticaNeueMedium.ttf"/>

</RelativeLayout>