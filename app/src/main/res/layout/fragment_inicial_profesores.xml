<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/fragment_profesor"
    android:background="@color/azul"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
        <ImageView
            android:paddingLeft="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_weight="1.0" />
        <TextView android:textSize="16.0dip"
            android:textColor="@color/blanco"
            android:gravity="center_vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/titulo_action_bar_profesores"
            android:layout_weight="2.0" />
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_margin="20.0dip"
        android:src="@drawable/vista_profesor"
        android:scaleType="fitCenter" />
    <TextView
        android:textSize="22sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:text="@string/contenido_vista_inicial_profesores"
        android:layout_weight="3" />

    <Button
        android:textSize="22sp"
        android:textColor="@color/azul_oscuro"
        android:gravity="center"
        android:id="@+id/btnParticipa"
        android:background="@drawable/style_button_background_azul"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="PARTICIPA"
        android:textStyle="bold"/>
</LinearLayout>