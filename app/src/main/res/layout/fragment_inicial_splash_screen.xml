<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/fragment_splashscreen"
    android:background="@color/azul"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:src="@drawable/logotipo"
        android:scaleType="fitCenter"
        android:layout_weight="6.0"
        android:contentDescription="@string/descripcion_logotipo" />
    <TextView
        android:textSize="28.0sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:text="@string/texto_bienvenida"
        android:layout_weight="2.0"
        android:layout_below="@id/logotipo" />
    <TextView
        android:textSize="20.0sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:id="@+id/textoInformacion"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="10.0dip"
        android:text="@string/texto_informativo"
        android:layout_weight="3.0" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:text="@string/texto_pregunta_cuenta" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/style_link_background_azul"
            android:gravity="center"
            android:id="@+id/tv_iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:text="@string/texto_iniciar_sesion"
            android:onClick="IniciarSesion" />
    </LinearLayout>
</LinearLayout>