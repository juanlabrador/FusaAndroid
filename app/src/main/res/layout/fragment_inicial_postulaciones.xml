<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fragment_postulacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"/>
    
    <ScrollView
        android:id="@+id/scroll_postulaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">
        
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postulacion_cabecera_datos"
                android:textColor="@color/gris_oscuro"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"/>
            
            <com.juanlabrador.GroupLayout
                android:id="@+id/grupo_datos_basicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:textSizeLayout="15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postulacion_cabecera_aspectos_musicales"
                android:textColor="@color/gris_oscuro"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"/>
    
            <com.juanlabrador.GroupLayout
                android:id="@+id/grupo_datos_musicales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:textSizeLayout="15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postulacion_cabecera_contacto"
                android:textColor="@color/gris_oscuro"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"/>
    
            <com.juanlabrador.GroupLayout
                android:id="@+id/grupo_datos_contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:textSizeLayout="15"/>
        </LinearLayout>
    </ScrollView>

    <com.dd.CircularProgressButton
        android:textSize="22sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:id="@+id/boton_postulaciones"
        android:background="@drawable/style_button_background_white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cpb_textComplete="@string/boton_enviado"
        app:cpb_textIdle="@string/boton_normal"
        app:cpb_textError="@string/boton_error"
        app:cpb_colorProgress="@color/blanco"
        app:cpb_colorIndicator="@color/azul"
        app:cpb_colorIndicatorBackground="@color/gris"
        app:cpb_selectorComplete="@color/style_btn_circular_progress_verde"
        app:cpb_selectorError="@color/style_btn_circular_progress_rojo"
        app:cpb_selectorIdle="@color/style_btn_circular_progress_azul" />

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:layout_gravity="center"
        android:id="@+id/cargando_postulaciones"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cpb_color="@color/azul"
        app:cpb_stroke_width="2dp"
        android:indeterminate="true"/>
</LinearLayout>