<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/blanco"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_foto_perfil_comentario"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:src="@drawable/foto_perfil"
            app:border_width="1.0dip"
            app:border_color="@color/azul" />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4.0">

            <TextView
                android:textSize="18.0sp"
                android:id="@+id/tv_usuario_comentario"
                android:paddingBottom="3.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/p1" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RatingBar android:id="@+id/calificacion_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    style="@style/RatingBarSmallfusa_blue" />
                <TextView
                    android:id="@+id/tv_fecha_comentario_evento"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/p3"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_editar_comentario"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_editar"
            android:layout_weight="1.0" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comentario_final"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/p4"
        android:maxLines="2" android:singleLine="true" />
</LinearLayout>