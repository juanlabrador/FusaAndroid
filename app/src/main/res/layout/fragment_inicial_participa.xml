<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/fragment_registrar_postulaciones"
    android:background="@color/blanco"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/view_barra_superior_participa"
        android:background="@color/azul"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_weight="1" />
        <TextView
            android:textSize="16dp"
            android:textColor="@color/blanco"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/participa_titulo_superior"
            android:layout_weight="2" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_cedula_participa"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/participa_edit_text_cedula"
                android:inputType="number" />

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_nombre_participa"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/texto_contenido_editext_nombre_postularse"
                android:inputType="text" />

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_apellido_participa"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/texto_contenido_editext_apellido_postularse"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                    android:id="@+id/et_sexo_participa"
                    android:background="@drawable/style_edit_text_azul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/texto_contenido_editext_sexo_postularse"
                    android:inputType="none"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/add_sexo_participa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                    android:id="@+id/et_fecha_nacimiento_participa"
                    android:background="@drawable/style_edit_text_azul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/texto_contenido_edittext_fecha_nacimiento_postularse"
                    android:inputType="none"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/add_fecha_nacimiento_participa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                    android:id="@+id/et_catedra_participa"
                    android:background="@drawable/style_edit_text_azul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/texto_contenido_editext_catedra_participa"
                    android:inputType="none"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/add_catedra_participa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_telefono_participa"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="@string/donaciones_edit_text_telefono"
                android:inputType="number"
                android:maxLength="12"/>

            <edu.ucla.fusa.android.modelo.herramientas.FloatingHintEditText
                android:id="@+id/et_email_participa"
                android:background="@drawable/style_edit_text_azul"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="@string/texto_contenido_edittext_correo_postularse"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </ScrollView>

    <com.dd.CircularProgressButton
        android:textSize="22sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:id="@+id/btn_enviar_solicitud_participa"
        android:background="@drawable/style_button_background_white"
        android:padding="10.0dip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cpb_textComplete="@string/contenido_boton_enviado"
        app:cpb_textIdle="@string/contenido_boton_normal"
        app:cpb_textError="@string/contenido_boton_error"
        app:cpb_colorProgress="@color/blanco"
        app:cpb_colorIndicator="@color/azul"
        app:cpb_colorIndicatorBackground="@color/gris"
        app:cpb_selectorComplete="@color/style_btn_circular_progress_verde"
        app:cpb_selectorError="@color/style_btn_circular_progress_rojo"
        app:cpb_selectorIdle="@color/style_btn_circular_progress_azul" />
</LinearLayout>