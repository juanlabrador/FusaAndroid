<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/fragment_contacto_i"
    android:background="@color/azul"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/barra_superior"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
        <ImageView
            android:paddingLeft="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_weight="1.0" />
        <TextView android:textSize="16.0dip" android:textColor="@color/blanco" android:gravity="center_vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="@string/titulo_action_bar_contacto" android:layout_weight="2.0" />
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:src="@drawable/logo_fundamusical"
        android:layout_weight="3.0" />
    <TextView
        android:textSize="20.0sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="10.0dip"
        android:text="@string/contenido_vista_inicial_contacto"
        android:layout_weight="3.0" />
    <Button
        android:textSize="22.0sp"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:id="@+id/btn_contacto"
        android:background="@drawable/style_button_background_azul"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="40.0dip"
        android:text="@string/texto_contacto" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_weight="1.0">
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/blanco"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:text="@string/texto_pregunta_cuenta" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/style_link_background_azul"
            android:gravity="center_vertical"
            android:id="@+id/tv_iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:text="@string/texto_iniciar_sesion"
            android:onClick="IniciarSesion" />
    </LinearLayout>
</LinearLayout>